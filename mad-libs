{
  class Program
  {
    static void Main(string[] args)
    {
      // Let the user know that the program is starting:
      Console.WriteLine("The Mad Libs Game is Starting!");


      // Give the Mad Lib a title:
      string title = "this is a test of zayn's knowledge in c# so he can build ar stories. ";

      Console.WriteLine(title);
      // Define user input and variables:
      Console.Write("Enter a name: ");
      string name = Console.ReadLine();

      Console.Write("Enter an adjective:");
      string adj1 = Console.ReadLine();

      Console.Write("Enter a second adjective: ");
      string adj2 = Console.ReadLine();

       Console.Write("Enter a noun, i'll ask you for another one in a moment. ex: girl, cabin, toaster. ");
      string noun1 = Console.ReadLine();

      Console.Write("Enter another noun! ");
      string noun2 = Console.ReadLine();

      Console.Write("Enter a verb. ex: sit, eat, sleep.");
      string verb = Console.ReadLine();

      Console.Write("Enter another noun! ");
      string noun3 = Console.ReadLine();

      Console.Write("Enter another noun! ");
      string noun4 = Console.ReadLine();

      Console.Write("Enter a third adjective: ");
      string adj3 = Console.ReadLine();

      Console.Write("Enter a superhero:");
      string superhero = Console.ReadLine();

